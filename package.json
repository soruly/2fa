{
  "name": "pasu",
  "version": "1.0.0",
  "description": "Self-hosted TOTP authenticator PWA with FIDO2 (WebAuthn)",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "pm2 start ecosystem.config.json",
    "watch": "pm2 start ecosystem.config.json --watch",
    "stop": "pm2 stop ecosystem.config.json",
    "restart": "pm2 restart ecosystem.config.json",
    "reload": "pm2 reload ecosystem.config.json",
    "delete": "pm2 delete ecosystem.config.json",
    "prettier": "prettier",
    "format": "prettier --write \"**/*.js\"",
    "lint": "prettier --check \"**/*.js\"",
    "test": "prettier --check \"**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/soruly/pasu.git"
  },
  "author": "soruly",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/soruly/pasu/issues"
  },
  "homepage": "https://github.com/soruly/pasu#readme",
  "dependencies": {
    "@maxmind/geoip2-node": "^4.0.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.1.0",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-rate-limit": "^6.6.0",
    "fido2-lib": "^3.4.0",
    "fs-extra": "^11.1.1"
  },
